<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:travel_app.ViewModels"

    <TabbedPage.BindingContext>
        <local:LoginViewModel />
    </TabbedPage.BindingContext>

    <ContentPage Title="Iniciar Sesión">
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="30">

            <Image Source="https://i.ibb.co/SRdN8M4/logo-removebg-preview.png" 
             HeightRequest="130" 
             WidthRequest="150" 
             HorizontalOptions="Center"/>

            <Label Text="SkyTrack"
             FontSize="26"
             FontAttributes="Bold"
             TextColor="Black"
             HorizontalOptions="Center"/>

            <Frame Padding="15" 
             Margin="10"
             BorderColor="White" 
             BackgroundColor="White" 
             CornerRadius="30"
             HasShadow="True">
                <Entry Placeholder="correo" 
               Keyboard="Email"
               Text="{Binding Username}"
                    HorizontalOptions="Center"
               WidthRequest="300"
               BackgroundColor="Transparent"/>
            </Frame>

            <Frame Padding="15" 
             Margin="10"
             BorderColor="White" 
             BackgroundColor="White" 
             CornerRadius="30"
             HasShadow="True">
                <Entry Placeholder="contraseña"
               IsPassword="true"
               Text="{Binding Password}"
                    HorizontalOptions="Center"
               WidthRequest="300"
               BackgroundColor="Transparent"/>
            </Frame>

            <Button Text="Iniciar Sesión"
              BackgroundColor="#FF6600"
              TextColor="White"
              CornerRadius="25"
              WidthRequest="250"
              HeightRequest="50"
              FontSize="18"
              Command="{Binding LoginCommand}" />

        </StackLayout>
    </ContentPage>

</TabbedPage>
